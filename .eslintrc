{
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "never"],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-case-declarations": "off", 
    "no-loop-func": "off"
  }
}
